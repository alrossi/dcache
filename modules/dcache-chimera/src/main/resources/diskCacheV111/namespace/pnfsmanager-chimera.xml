<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder/>

    <bean id="permission-handler"
          class="org.dcache.namespace.ChainedPermissionHandler">
        <description>Permission handler</description>
        <property name="chain">
            <list>
                <bean class="org.dcache.namespace.ACLPermissionHandler"/>
                <bean class="org.dcache.namespace.PosixPermissionHandler"/>
            </list>
        </property>
    </bean>

  <bean id="pnfs-manager" class="diskCacheV111.namespace.PnfsManagerV3"
        init-method="init" destroy-method="shutdown">
      <description>Request processor</description>
      <property name="threads" value="${pnfsmanager.limits.threads-per-group}"/>
      <property name="threadGroups" value="${pnfsmanager.limits.thread-groups}"/>
      <property name="listThreads" value="${pnfsmanager.limits.list-threads}"/>
      <property name="cacheLocationThreads" value="${cachelocation-threads}"/>
      <property name="cacheModificationRelay" value="${cmRelay}"/>
      <property name="pnfsDeleteNotificationRelay" value="${pnfsDeleteRelay}"/>
      <property name="logSlowThreshold" value="${pnfsmanager.limits.log-slow-threshold}"/>
      <property name="folding" value="${pnfsmanager.enable.folding}"/>
      <property name="directoryListLimit" value="${pnfsmanager.limits.list-chunk-size}"/>
      <property name="permissionHandler" ref="permission-handler"/>
      <property name="nameSpaceProvider" ref="name-space-provider"/>
      <property name="cacheLocationProvider" ref="name-space-provider"/>
      <property name="queueMaxSize" value="${pnfsmanager.limits.queue-length}"/>
      <property name="atimeGap" value="${pnfsmanager.atime-gap}" />
  </bean>

    <bean id="data-source" class="org.dcache.db.AlarmEnabledDataSource">
        <description>Connection pool decorator</description>
        <constructor-arg value="${pnfsmanager.db.url}"/>
        <constructor-arg value="JdbcFs"/>
        <constructor-arg>
            <bean class="com.zaxxer.hikari.HikariDataSource">
                <description>Database connection pool</description>
                <constructor-arg>
                    <bean class="com.zaxxer.hikari.HikariConfig">
                        <property name="jdbcUrl" value="${pnfsmanager.db.url}"/>
                        <property name="username" value="${pnfsmanager.db.user}"/>
                        <property name="password" value="#{ T(diskCacheV111.util.Pgpass).getPassword('${pnfsmanager.db.password.file}', '${pnfsmanager.db.url}', '${pnfsmanager.db.user}', '${pnfsmanager.db.password}') }"/>
                        <property name="minimumIdle" value="${pnfsmanager.db.connections.idle}"/>
                        <property name="maximumPoolSize" value="${pnfsmanager.db.connections.max}"/>
                        <property name="autoCommit" value="true"/>
                        <property name="transactionIsolation" value="TRANSACTION_READ_COMMITTED"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

  <bean id="liquibase" class="org.dcache.util.SpringLiquibase">
      <description>Database schema manager</description>
      <property name="dataSource" ref="data-source"/>
      <property name="changeLog" value="classpath:${pnfsmanager.db.schema.changelog}"/>
      <property name="shouldUpdate" value="${pnfsmanager.db.schema.auto}"/>
  </bean>

  <bean id="file-system" class="org.dcache.chimera.JdbcFs" depends-on="liquibase">
      <constructor-arg ref="data-source"/>
      <constructor-arg value="${pnfsmanager.db.dialect}"/>
  </bean>

  <bean id="extractor" class="${pnfsmanager.plugins.storage-info-extractor}">
      <description>Storage info extractor</description>
      <constructor-arg value="#{ T(diskCacheV111.util.AccessLatency).getAccessLatency('${pnfsmanager.default-access-latency}') }"/>
      <constructor-arg value="#{ T(diskCacheV111.util.RetentionPolicy).getRetentionPolicy('${pnfsmanager.default-retention-policy}') }"/>
  </bean>

  <bean id="name-space-provider"
        class="org.dcache.chimera.namespace.ChimeraNameSpaceProvider">
      <description>Name space provider</description>
      <property name="permissionHandler" ref="permission-handler"/>
      <property name="inheritFileOwnership" value="${pnfsmanager.enable.inherit-file-ownership}"/>
      <property name="verifyAllLookups" value="${pnfsmanager.enable.full-path-permission-check}"/>
      <property name="fileSystem" ref="file-system"/>
      <property name="extractor" ref="extractor"/>
      <property name="aclEnabled" value="${pnfsmanager.enable.acl}"/>
      <property name="uploadDirectory" value="${pnfsmanager.upload-directory}"/>
  </bean>

  <bean id="acl-admin" class="org.dcache.acl.AclAdmin">
      <description>Provides commands for manipulating ACLs</description>
      <property name="nameSpaceProvider" ref="name-space-provider"/>
  </bean>

  <!-- +++++++++++++++++++++++++++++++++++++++++++++++ Replica Manager +++++++++++++++++++++++++++++++++++++++++++++++ -->

    <bean id="PoolManagerStub" class="org.dcache.cells.CellStub">
        <property name="destination" value="${replicamanager.service.poolmanager}"/>
        <property name="timeout" value="${replicamanager.limits.poolmanager-timeout}"/>
        <property name="timeoutUnit" value="${replicamanager.limits.poolmanager-timeout.unit}"/>
        <property name="retryOnNoRouteToCell" value="true"/>
    </bean>

    <bean id="PinManagerStub" class="org.dcache.cells.CellStub">
        <property name="destination" value="${replicamanager.service.pinmanager}"/>
        <property name="timeout" value="${replicamanager.limits.pinmanager-timeout}"/>
        <property name="timeoutUnit" value="${replicamanager.limits.pinmanager-timeout.unit}"/>
        <property name="retryOnNoRouteToCell" value="true"/>
    </bean>

    <bean id="PnfsManagerStub" class="org.dcache.cells.CellStub">
        <description>Not for internal use: for export to callbacks.</description>
        <property name="destination" value="${replicamanager.service.pnfsmanager}"/>
        <property name="timeout" value="${replicamanager.limits.pnfsmanager-timeout}"/>
        <property name="timeoutUnit" value="${replicamanager.limits.pnfsmanager-timeout.unit}"/>
        <property name="retryOnNoRouteToCell" value="true"/>
    </bean>

    <bean id="PoolMonitorStub" class="org.dcache.poolmanager.RemotePoolMonitorFactoryBean">
        <property name="poolManagerStub" ref="PoolManagerStub"/>
    </bean>

    <bean id="PoolStubFactory" class="org.dcache.replication.v3.CellStubFactory">
        <property name="timeout" value="${replicamanager.limits.pool-timeout}"/>
        <property name="timeoutUnit" value="${replicamanager.limits.pool-timeout.unit}"/>
    </bean>

    <bean id="ResilientInfoCache" class="org.dcache.replication.v3.namespace.ResilientInfoCache">
        <property name="poolMonitor" ref="PoolMonitorStub"/>
        <property name="namespace" ref="name-space-provider"/>
        <property name="pnfsInfoCacheExpiry" value="${replicamanager.limits.pnfs-info-cache-expiry}"/>
        <property name="pnfsInfoCacheExpiryUnit" value="${replicamanager.limits.pnfs-info-cache-expiry.unit}"/>
        <property name="pnfsInfoCacheSize" value="${replicamanager.limits.pnfs-info-cache-size}"/>
        <property name="poolInfoCacheExpiry" value="${replicamanager.limits.pool-info-cache-expiry}"/>
        <property name="poolInfoCacheExpiryUnit" value="${replicamanager.limits.pool-info-cache-expiry.unit}"/>
        <property name="poolInfoCacheSize" value="${replicamanager.limits.pool-info-cache-size}"/>
        <property name="poolStatusCacheExpiry" value="${replicamanager.limits.pool-status-cache-expiry}"/>
        <property name="poolStatusCacheExpiryUnit" value="${replicamanager.limits.pool-status-cache-expiry.unit}"/>
        <property name="poolStatusCacheSize" value="${replicamanager.limits.pool-status-cache-size}"/>
    </bean>

    <bean id="FileInfoTaskHandler" class="org.dcache.replication.v3.namespace.handlers.task.FileInfoTaskCompletionHandler">
        <property name="ReplicaManagerHub" ref="ReplicaManagerHub"/>
        <property name="useGreedyRequests" value="${replicamanager.requests.use-greedy-limits}"/>
    </bean>

    <bean id="PoolGroupInfoTaskHandler" class="org.dcache.replication.v3.namespace.handlers.task.PoolGroupInfoTaskCompletionHandler">
        <property name="ReplicaManagerHub" ref="ReplicaManagerHub"/>
    </bean>

    <bean id="ReductionTaskHandler" class="org.dcache.replication.v3.namespace.handlers.task.ReductionTaskCompletionHandler"/>

    <bean id="MigrationTaskExecutor" class="org.dcache.replication.v3.CDCScheduledPoolTaskExecutor">
        <property name="numberOfThreads" value="${replicamanager.limits.number-of-replica-workers}"/>
    </bean>

    <bean id="PnfsInfoTaskExecutor" class="org.dcache.replication.v3.CDCFixedPoolTaskExecutor">
        <property name="numberOfThreads" value="${replicamanager.limits.number-of-cache-info-workers}"/>
    </bean>

    <bean id="PoolGroupInfoTaskExecutor" class="org.dcache.replication.v3.CDCFixedPoolTaskExecutor">
        <property name="numberOfThreads" value="${replicamanager.limits.number-of-pool-group-info-workers}"/>
    </bean>

    <bean id="PoolStatusChangeTaskExecutor" class="org.dcache.replication.v3.CDCFixedPoolTaskExecutor">
        <property name="numberOfThreads" value="${replicamanager.limits.number-of-pool-status-info-workers}"/>
    </bean>

    <bean id="ReductionTaskExecutor" class="org.dcache.replication.v3.CDCFixedPoolTaskExecutor">
        <property name="numberOfThreads" value="${replicamanager.limits.number-of-reduction-workers}"/>
    </bean>

    <bean id="ReplicaManagerHub" class="org.dcache.replication.v3.namespace.ReplicaManagerHub">
        <property name="pinManager" ref="PinManagerStub"/>
        <property name="pnfsManager" ref="PnfsManagerStub"/>
        <property name="poolManager" ref="PoolManagerStub"/>
        <property name="poolStubFactory" ref="PoolStubFactory"/>
        <property name="cache" ref="ResilientInfoCache"/>
        <property name="fileInfoTaskHandler" ref="FileInfoTaskHandler"/>
        <property name="poolGroupInfoTaskHandler" ref="PoolGroupInfoTaskHandler"/>
        <property name="reductionTaskHandler" ref="ReductionTaskHandler"/>
        <property name="migrationTaskExecutor" ref="MigrationTaskExecutor"/>
        <property name="pnfsInfoTaskExecutor" ref="PnfsInfoTaskExecutor"/>
        <property name="poolGroupInfoTaskExecutor" ref="PoolGroupInfoTaskExecutor"/>
        <property name="poolStatusChangeTaskExecutor" ref="PoolStatusChangeTaskExecutor"/>
        <property name="reductionTaskExecutor" ref="ReductionTaskExecutor"/>
    </bean>
</beans>
