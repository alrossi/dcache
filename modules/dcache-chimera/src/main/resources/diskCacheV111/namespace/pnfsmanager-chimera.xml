<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder/>

    <bean id="permission-handler"
          class="org.dcache.namespace.ChainedPermissionHandler">
        <description>Permission handler</description>
        <property name="chain">
            <list>
                <bean class="org.dcache.namespace.ACLPermissionHandler"/>
                <bean class="org.dcache.namespace.PosixPermissionHandler"/>
            </list>
        </property>
    </bean>

    <bean id="noroutetocell" class="org.dcache.cells.LogNoRouteToCellExceptionReceiver">
        <description>Undeliverable message logger</description>
        <property name="excludedDestinations" value="${pnfsmanager.destination.cache-notification}"/>
    </bean>

  <bean id="pnfs-manager" class="diskCacheV111.namespace.PnfsManagerV3"
        init-method="init" destroy-method="shutdown">
      <description>Request processor</description>
      <property name="threads" value="${pnfsmanager.limits.threads-per-group}"/>
      <property name="threadGroups" value="${pnfsmanager.limits.thread-groups}"/>
      <property name="listThreads" value="${pnfsmanager.limits.list-threads}"/>
      <property name="cacheModificationRelay" value="${pnfsmanager.destination.cache-notification}"/>
      <property name="logSlowThreshold" value="${pnfsmanager.limits.log-slow-threshold}"/>
      <property name="directoryListLimit" value="${pnfsmanager.limits.list-chunk-size}"/>
      <property name="permissionHandler" ref="permission-handler"/>
      <property name="nameSpaceProvider" ref="name-space-provider"/>
      <property name="queueMaxSize" value="${pnfsmanager.limits.queue-length}"/>
      <property name="atimeGap" value="${pnfsmanager.atime-gap}" />
      <property name="flushNotificationTarget" value="${pnfsmanager.destination.flush-notification}"/>
  </bean>

    <bean id="data-source" class="org.dcache.db.AlarmEnabledDataSource" destroy-method="close">
        <description>Database connection pool</description>
        <constructor-arg value="${pnfsmanager.db.url}"/>
        <constructor-arg value="JdbcFs"/>
        <constructor-arg>
            <bean class="com.zaxxer.hikari.HikariDataSource">
                <constructor-arg>
                    <bean class="com.zaxxer.hikari.HikariConfig">
                        <property name="jdbcUrl" value="${pnfsmanager.db.url}"/>
                        <property name="username" value="${pnfsmanager.db.user}"/>
                        <property name="password" value="#{ T(diskCacheV111.util.Pgpass).getPassword('${pnfsmanager.db.password.file}', '${pnfsmanager.db.url}', '${pnfsmanager.db.user}', '${pnfsmanager.db.password}') }"/>
                        <property name="minimumIdle" value="${pnfsmanager.db.connections.idle}"/>
                        <property name="maximumPoolSize" value="${pnfsmanager.db.connections.max}"/>
                        <property name="autoCommit" value="true"/>
                        <property name="transactionIsolation" value="TRANSACTION_READ_COMMITTED"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="tx-manager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <description>Database transaction manager</description>
        <property name="dataSource" ref="data-source"/>
    </bean>

    <bean id="tx-annotation-processor" class="org.dcache.util.aspects.PerInstanceAnnotationTransactionBeanPostProcessor">
        <description>Annotated transaction demarcation processor</description>
        <property name="transactionManager" ref="tx-manager"/>
    </bean>

  <bean id="liquibase" class="org.dcache.util.SpringLiquibase">
      <description>Database schema manager</description>
      <property name="dataSource" ref="data-source"/>
      <property name="changeLog" value="classpath:${pnfsmanager.db.schema.changelog}"/>
      <property name="shouldUpdate" value="${pnfsmanager.db.schema.auto}"/>
  </bean>

  <bean id="file-system" class="org.dcache.chimera.JdbcFs" depends-on="liquibase">
      <description>Chimera</description>
      <constructor-arg ref="data-source"/>
      <constructor-arg ref="tx-manager"/>
      <constructor-arg value="${pnfsmanager.db.dialect}"/>
  </bean>

  <bean id="extractor" class="${pnfsmanager.plugins.storage-info-extractor}">
      <description>Storage info extractor</description>
      <constructor-arg value="#{ T(diskCacheV111.util.AccessLatency).getAccessLatency('${pnfsmanager.default-access-latency}') }"/>
      <constructor-arg value="#{ T(diskCacheV111.util.RetentionPolicy).getRetentionPolicy('${pnfsmanager.default-retention-policy}') }"/>
  </bean>

  <bean id="name-space-provider"
        class="org.dcache.chimera.namespace.ChimeraNameSpaceProvider">
      <description>Name space provider</description>
      <property name="permissionHandler" ref="permission-handler"/>
      <property name="inheritFileOwnership" value="${pnfsmanager.enable.inherit-file-ownership}"/>
      <property name="verifyAllLookups" value="${pnfsmanager.enable.full-path-permission-check}"/>
      <property name="fileSystem" ref="file-system"/>
      <property name="extractor" ref="extractor"/>
      <property name="aclEnabled" value="${pnfsmanager.enable.acl}"/>
      <property name="uploadDirectory" value="${pnfsmanager.upload-directory}/%d"/>
  </bean>

  <bean id="acl-admin" class="org.dcache.acl.AclAdmin">
      <description>ACL command line</description>
      <property name="nameSpaceProvider" ref="name-space-provider"/>
  </bean>

  <beans profile="resilience-true">
    <description>This profile is only relevant when running resilience in embedded mode.</description>
    <bean id="NamespaceAccessConnectionPool" class="com.zaxxer.hikari.HikariDataSource" destroy-method="shutdown">
      <description>Separate connection pool for long-running queries</description>
      <constructor-arg>
        <bean class="com.zaxxer.hikari.HikariConfig">
          <property name="jdbcUrl" value="${pnfsmanager.db.url}"/>
          <property name="username" value="${pnfsmanager.db.user}"/>
          <property name="password" value="#{ T(diskCacheV111.util.Pgpass).getPassword('${pnfsmanager.db.password.file}', '${pnfsmanager.db.url}', '${pnfsmanager.db.user}', '${pnfsmanager.db.password}') }"/>
          <property name="minimumIdle" value="${pnfsmanager.resilience.db.connections.idle}"/>
          <property name="maximumPoolSize" value="${pnfsmanager.resilience.db.connections.max}"/>
          <property name="transactionIsolation" value="TRANSACTION_READ_COMMITTED"/>
        </bean>
      </constructor-arg>
    </bean>

    <bean id="poolManager" class="org.dcache.cells.CellStub">
      <property name="destination" value="${pnfsmanager.service.poolmanager}"/>
      <property name="timeout" value="${pnfsmanager.service.poolmanager.timeout}"/>
      <property name="timeoutUnit" value="${pnfsmanager.service.poolmanager.timeout.unit}"/>
      <property name="retryOnNoRouteToCell" value="true"/>
    </bean>

    <bean id="pinManager" class="org.dcache.cells.CellStub">
      <property name="destination" value="${pnfsmanager.service.pinmanager}"/>
      <property name="timeout" value="${pnfsmanager.service.poolmanager.timeout}"/>
      <property name="timeoutUnit" value="${pnfsmanager.service.poolmanager.timeout.unit}"/>
      <property name="retryOnNoRouteToCell" value="true"/>
    </bean>

    <bean id="NamespaceAccess" class="org.dcache.resilience.db.LocalNamespaceAccess">
      <description>Specialized access for scanning resilient pools</description>
      <property name="namespace" ref="name-space-provider"/>
      <property name="connectionPool" ref="NamespaceAccessConnectionPool"/>
      <property name="fetchSize" value="${pnfsmanager.resilience.pnfs-fetch-size}"/>
      <property name="handler" ref="PnfsOpHandler"/>
    </bean>

    <bean id="CellStubFactory" class="org.dcache.util.CellStubFactory">
      <property name="pinManager" ref="pinManager"/>
      <property name="poolManager" ref="poolManager"/>
      <property name="poolTimeout" value="${pnfsmanager.service.pool.timeout}"/>
      <property name="poolTimeoutUnit" value="${pnfsmanager.service.pool.timeout.unit}"/>
    </bean>

    <bean id="SubmitExecutor" class="org.dcache.util.CDCFixedPoolTaskExecutor"
          init-method="initialize" destroy-method="shutdownNow">
      <property name="numberOfThreads" value="${pnfsmanager.resilience.submit-threads}"/>
    </bean>

    <bean id="PnfsOpExecutor" class="org.dcache.util.CDCFixedPoolTaskExecutor"
          init-method="initialize" destroy-method="shutdownNow">
      <property name="numberOfThreads" value="${pnfsmanager.resilience.pnfs-op-threads}"/>
    </bean>

    <bean id="PoolScanExecutor" class="org.dcache.util.CDCFixedPoolTaskExecutor"
          init-method="initialize" destroy-method="shutdownNow">
      <property name="numberOfThreads" value="${pnfsmanager.resilience.pool-scan-threads}"/>
    </bean>

    <bean id="MigrationExecutor" class="org.dcache.util.CDCScheduledPoolTaskExecutor"
          init-method="initialize" destroy-method="shutdownNow">
      <property name="numberOfThreads" value="${pnfsmanager.resilience.file-copy-threads}"/>
    </bean>

    <bean id="InaccessibleFileHandler" class="org.dcache.resilience.util.InaccessibleFileAlarmSender">
      <property name="parentDir" value="${pnfsmanager.resilience.inaccessible-files.directory}"/>
    </bean>

    <bean id="Counters" class="org.dcache.resilience.util.OperationStatistics" init-method="initialize">
      <property name="statisticsPath" value="${pnfsmanager.resilience.home}/pnfs-operation-statistics"/>
    </bean>

    <bean id="History" class="org.dcache.resilience.util.OperationHistory" init-method="initialize">
      <property name="capacity" value="${pnfsmanager.resilience.history.buffer-size}"/>
    </bean>

    <bean id="PoolSelectionStrategy" class="${pnfsmanager.resilience.pool-selection-strategy}"/>

    <bean id="MessageGuard" class="org.dcache.resilience.util.MessageGuard"
          init-method="initialize" destroy-method="shutDown">
      <property name="backlogHandler" ref="MessageHandler"/>
      <property name="sampleInterval" value="${pnfsmanager.resilience.startup-delay-sample-interval}"/>
      <property name="sampleIntervalUnit" value="${pnfsmanager.resilience.startup-delay-sample-interval.unit}"/>
    </bean>

    <bean id="PoolInfoMap" class="org.dcache.resilience.data.PoolInfoMap">
      <property name="cacheExpiry" value="${pnfsmanager.resilience.cache-expiry}"/>
      <property name="cacheExpiryUnit" value="${pnfsmanager.resilience.cache-expiry.unit}"/>
      <property name="cellStubFactory" ref="CellStubFactory"/>
      <property name="poolSelectionStrategy" ref="PoolSelectionStrategy"/>
    </bean>

    <bean id="PnfsTaskCompletionHandler" class="org.dcache.resilience.handlers.PnfsTaskCompletionHandler">
      <property name="map" ref="PnfsOpMap"/>
    </bean>

    <bean id="PoolTaskCompletionHandler" class="org.dcache.resilience.handlers.PoolTaskCompletionHandler">
      <property name="map" ref="PoolOpMap"/>
    </bean>

    <bean id="PnfsOpMap" class="org.dcache.resilience.data.PnfsOperationMap" destroy-method="shutdown">
      <property name="timeout" value="${pnfsmanager.resilience.pnfs-scan.period}"/>
      <property name="timeoutUnit" value="${pnfsmanager.resilience.pnfs-scan.period.unit}"/>
      <property name="completionHandler" ref="PnfsTaskCompletionHandler"/>
      <property name="poolTaskCompletionHandler" ref="PoolTaskCompletionHandler"/>
      <property name="counters" ref="Counters"/>
      <property name="history" ref="History"/>
      <property name="copyThreads" value="${pnfsmanager.resilience.file-copy-threads}"/>
      <property name="maxRetries" value="${pnfsmanager.resilience.max-retries}"/>
      <property name="operationHandler" ref="PnfsOpHandler"/>
      <property name="poolInfoMap" ref="PoolInfoMap"/>
      <property name="checkpointExpiry" value="${pnfsmanager.resilience.checkpoint-expiry}"/>
      <property name="checkpointExpiryUnit" value="${pnfsmanager.resilience.checkpoint-expiry.unit}"/>
      <property name="checkpointFilePath" value="${pnfsmanager.resilience.home}/pnfs-operation-map"/>
    </bean>

    <bean id="PoolOpMap" class="org.dcache.resilience.data.PoolOperationMap" destroy-method="shutdown">
      <property name="timeout" value="${pnfsmanager.resilience.pool-scan.period}"/>
      <property name="timeoutUnit" value="${pnfsmanager.resilience.pool-scan.period.unit}"/>
      <property name="poolInfoMap" ref="PoolInfoMap"/>
      <property name="counters" ref="Counters"/>
      <property name="downGracePeriod" value="${pnfsmanager.resilience.pool-down-grace-period}"/>
      <property name="downGracePeriodUnit" value="${pnfsmanager.resilience.pool-down-grace-period.unit}"/>
      <property name="handler" ref="PoolOpHandler"/>
      <property name="inaccessibleFileHandler" ref="InaccessibleFileHandler"/>
      <property name="maxConcurrentRunning" value="${pnfsmanager.resilience.pool-scan-threads}"/>
      <property name="rescanWindow" value="${pnfsmanager.resilience.pool-scan.window}"/>
      <property name="rescanWindowUnit" value="${pnfsmanager.resilience.pool-scan.window.unit}"/>
      <property name="handleRestarts" value="${pnfsmanager.resilience.scan-on-pool-restart}"/>
      <property name="watchdog" value="${pnfsmanager.resilience.watchdog.enabled}"/>
    </bean>

    <bean id="PnfsOpHandler" class="org.dcache.resilience.handlers.PnfsOperationHandler">
      <property name="completionHandler" ref="PnfsTaskCompletionHandler"/>
      <property name="factory" ref="CellStubFactory"/>
      <property name="inaccessibleFileHandler" ref="InaccessibleFileHandler"/>
      <property name="namespace" ref="NamespaceAccess"/>
      <property name="pnfsOpMap" ref="PnfsOpMap"/>
      <property name="poolInfoMap" ref="PoolInfoMap"/>
      <property name="scheduledService" ref="MigrationExecutor"/>
      <property name="taskService" ref="PnfsOpExecutor"/>
    </bean>

    <bean id="PoolOpHandler" class="org.dcache.resilience.handlers.PoolOperationHandler">
      <property name="namespace" ref="NamespaceAccess"/>
      <property name="completionHandler" ref="PoolTaskCompletionHandler"/>
      <property name="operationMap" ref="PoolOpMap"/>
      <property name="scanService" ref="PoolScanExecutor"/>
      <property name="submitService" ref="SubmitExecutor"/>
    </bean>

    <bean id="MessageHandler" class="org.dcache.resilience.handlers.ResilienceMessageHandler">
      <property name="counters" ref="Counters"/>
      <property name="initializer" ref="MapInitializer"/>
      <property name="messageGuard" ref="MessageGuard"/>
      <property name="pnfsOperationHandler" ref="PnfsOpHandler"/>
      <property name="poolInfoMap" ref="PoolInfoMap"/>
      <property name="poolOperationHandler" ref="PoolOpHandler"/>
      <property name="poolOpMap" ref="PoolOpMap"/>
      <property name="updateService" ref="SubmitExecutor"/>
    </bean>

    <bean id="AdminCommands" class="org.dcache.resilience.admin.EmbeddedResilienceCommands">
      <property name="counters" ref="Counters"/>
      <property name="history" ref="History"/>
      <property name="messageGuard" ref="MessageGuard"/>
      <property name="initializer" ref="MapInitializer"/>
      <property name="namespaceAccess" ref="NamespaceAccess"/>
      <property name="pnfsOperationHandler" ref="PnfsOpHandler"/>
      <property name="pnfsOperationMap" ref="PnfsOpMap"/>
      <property name="poolInfoMap" ref="PoolInfoMap"/>
      <property name="poolOperationMap" ref="PoolOpMap"/>
    </bean>

    <bean id="MapInitializer" class="org.dcache.resilience.util.MapInitializer"
          init-method="initialize">
      <property name="poolManager" ref="poolManager"/>
      <property name="messageGuard" ref="MessageGuard"/>
      <property name="messageHandler" ref="MessageHandler"/>
      <property name="poolInfoMap" ref="PoolInfoMap"/>
      <property name="poolOperationHandler" ref="PoolOpHandler"/>
      <property name="poolOperationMap" ref="PoolOpMap"/>
      <property name="pnfsOperationMap" ref="PnfsOpMap"/>
    </bean>
  </beans>
</beans>
