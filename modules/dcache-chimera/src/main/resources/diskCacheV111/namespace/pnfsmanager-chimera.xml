<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder/>

    <bean id="permission-handler"
          class="org.dcache.namespace.ChainedPermissionHandler">
        <description>Permission handler</description>
        <property name="chain">
            <list>
                <bean class="org.dcache.namespace.ACLPermissionHandler"/>
                <bean class="org.dcache.namespace.PosixPermissionHandler"/>
            </list>
        </property>
    </bean>

  <bean id="pnfs-manager" class="diskCacheV111.namespace.PnfsManagerV3"
        init-method="init" destroy-method="shutdown">
      <description>Request processor</description>
      <property name="threads" value="${pnfsmanager.limits.threads-per-group}"/>
      <property name="threadGroups" value="${pnfsmanager.limits.thread-groups}"/>
      <property name="listThreads" value="${pnfsmanager.limits.list-threads}"/>
      <property name="cacheLocationThreads" value="${cachelocation-threads}"/>
      <property name="cacheModificationRelay" value="${cmRelay}"/>
      <property name="pnfsDeleteNotificationRelay" value="${pnfsDeleteRelay}"/>
      <property name="logSlowThreshold" value="${pnfsmanager.limits.log-slow-threshold}"/>
      <property name="folding" value="${pnfsmanager.enable.folding}"/>
      <property name="directoryListLimit" value="${pnfsmanager.limits.list-chunk-size}"/>
      <property name="permissionHandler" ref="permission-handler"/>
      <property name="nameSpaceProvider" ref="name-space-provider"/>
      <property name="cacheLocationProvider" ref="name-space-provider"/>
      <property name="queueMaxSize" value="${pnfsmanager.limits.queue-length}"/>
      <property name="atimeGap" value="${pnfsmanager.atime-gap}" />
  </bean>

    <bean id="data-source" class="org.dcache.db.AlarmEnabledDataSource">
        <description>Connection pool decorator</description>
        <constructor-arg value="${pnfsmanager.db.url}"/>
        <constructor-arg value="JdbcFs"/>
        <constructor-arg>
            <bean class="com.zaxxer.hikari.HikariDataSource" destroy-method="shutdown">
                <description>Database connection pool</description>
                <constructor-arg>
                    <bean class="com.zaxxer.hikari.HikariConfig">
                        <property name="jdbcUrl" value="${pnfsmanager.db.url}"/>
                        <property name="username" value="${pnfsmanager.db.user}"/>
                        <property name="password" value="#{ T(diskCacheV111.util.Pgpass).getPassword('${pnfsmanager.db.password.file}', '${pnfsmanager.db.url}', '${pnfsmanager.db.user}', '${pnfsmanager.db.password}') }"/>
                        <property name="minimumIdle" value="${pnfsmanager.db.connections.idle}"/>
                        <property name="maximumPoolSize" value="${pnfsmanager.db.connections.max}"/>
                        <property name="autoCommit" value="true"/>
                        <property name="transactionIsolation" value="TRANSACTION_READ_COMMITTED"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

  <bean id="liquibase" class="org.dcache.util.SpringLiquibase">
      <description>Database schema manager</description>
      <property name="dataSource" ref="data-source"/>
      <property name="changeLog" value="classpath:${pnfsmanager.db.schema.changelog}"/>
      <property name="shouldUpdate" value="${pnfsmanager.db.schema.auto}"/>
  </bean>

  <bean id="file-system" class="org.dcache.chimera.JdbcFs" depends-on="liquibase">
      <constructor-arg ref="data-source"/>
      <constructor-arg value="${pnfsmanager.db.dialect}"/>
  </bean>

  <bean id="extractor" class="${pnfsmanager.plugins.storage-info-extractor}">
      <description>Storage info extractor</description>
      <constructor-arg value="#{ T(diskCacheV111.util.AccessLatency).getAccessLatency('${pnfsmanager.default-access-latency}') }"/>
      <constructor-arg value="#{ T(diskCacheV111.util.RetentionPolicy).getRetentionPolicy('${pnfsmanager.default-retention-policy}') }"/>
  </bean>

  <bean id="name-space-provider"
        class="org.dcache.chimera.namespace.ChimeraNameSpaceProvider">
      <description>Name space provider</description>
      <property name="permissionHandler" ref="permission-handler"/>
      <property name="inheritFileOwnership" value="${pnfsmanager.enable.inherit-file-ownership}"/>
      <property name="verifyAllLookups" value="${pnfsmanager.enable.full-path-permission-check}"/>
      <property name="fileSystem" ref="file-system"/>
      <property name="extractor" ref="extractor"/>
      <property name="aclEnabled" value="${pnfsmanager.enable.acl}"/>
      <property name="uploadDirectory" value="${pnfsmanager.upload-directory}"/>
  </bean>

  <bean id="acl-admin" class="org.dcache.acl.AclAdmin">
      <description>Provides commands for manipulating ACLs</description>
      <property name="nameSpaceProvider" ref="name-space-provider"/>
  </bean>

  <!-- **************************************** Replication ****************************************** -->

  <beans profile="replica-management-true">
    <bean id="ActivityRegistry" class="org.dcache.namespace.replication.monitoring.ActivityRegistry"/>

    <bean id="ReplicaConnectionPool" class="com.zaxxer.hikari.HikariDataSource" destroy-method="shutdown">
      <description>Database connection pool</description>
      <constructor-arg>
        <bean class="com.zaxxer.hikari.HikariConfig">
          <property name="jdbcUrl" value="${pnfsmanager.db.url}"/>
          <property name="username" value="${pnfsmanager.db.user}"/>
          <property name="password" value="#{ T(diskCacheV111.util.Pgpass).getPassword('${pnfsmanager.db.password.file}', '${pnfsmanager.db.url}', '${pnfsmanager.db.user}', '${pnfsmanager.db.password}') }"/>
          <property name="minimumIdle" value="${pnfsmanager.replication.db.connections.idle}"/>
          <property name="maximumPoolSize" value="${pnfsmanager.replication.db.connections.max}"/>
          <property name="autoCommit" value="true"/>
          <property name="transactionIsolation" value="TRANSACTION_READ_COMMITTED"/>
        </bean>
      </constructor-arg>
    </bean>

    <bean id="NamespaceAccess" class="org.dcache.namespace.replication.db.LocalNamespaceAccess">
      <property name="namespace" ref="name-space-provider"/>
      <property name="connectionPool" ref="ReplicaConnectionPool"/>
      <property name="fetchSize" value="${pnfsmanager.replication.pnfs-fetch-size}"/>
      <property name="hub" ref="ReplicationHub"/>
    </bean>

    <bean id="VerifyPoolExecutor" class="org.dcache.util.replication.CDCFixedPoolTaskExecutor">
      <property name="numberOfThreads" value="${pnfsmanager.replication.concurrent-pool-info-fetches}"/>
    </bean>

    <bean id="ProcessPnfsIdExecutor" class="org.dcache.util.replication.CDCFixedPoolTaskExecutor">
      <property name="numberOfThreads" value="${pnfsmanager.replication.concurrent-pnfsid-jobs}"/>
    </bean>

    <bean id="ProcessPoolExecutor" class="org.dcache.util.replication.CDCFixedPoolTaskExecutor">
      <property name="numberOfThreads" value="${pnfsmanager.replication.concurrent-pool-status-jobs}"/>
    </bean>

    <bean id="MakeCopiesExecutor" class="org.dcache.util.replication.CDCFixedPoolTaskExecutor">
      <property name="numberOfThreads" value="${pnfsmanager.replication.concurrent-copy-jobs}"/>
    </bean>

    <bean id="RemoveExtrasExecutor" class="org.dcache.util.replication.CDCFixedPoolTaskExecutor">
      <property name="numberOfThreads" value="${pnfsmanager.replication.concurrent-remove-jobs}"/>
    </bean>

    <bean id="MigrationTaskExecutor" class="org.dcache.util.replication.CDCScheduledPoolTaskExecutor">
      <property name="numberOfThreads" value="${pnfsmanager.replication.concurrent-copy-jobs}"/>
    </bean>

    <bean id="PoolManagerStub" class="org.dcache.cells.CellStub">
      <property name="destination" value="${pnfsmanager.service.poolmanager}"/>
      <property name="timeout" value="${pnfsmanager.service.poolmanager-timeout}"/>
      <property name="timeoutUnit" value="${pnfsmanager.service.poolmanager-timeout.unit}"/>
      <property name="retryOnNoRouteToCell" value="true"/>
    </bean>

    <bean id="PoolMonitorStub" class="org.dcache.poolmanager.RemotePoolMonitorFactoryBean">
      <property name="poolManagerStub" ref="PoolManagerStub"/>
    </bean>

    <bean id="CellStubFactory" class="org.dcache.util.replication.CellStubFactory">
      <property name="pinManagerStub">
        <bean class="org.dcache.cells.CellStub">
          <property name="destination" value="${pnfsmanager.service.pinmanager}"/>
          <property name="timeout" value="${pnfsmanager.service.pinmanager-timeout}"/>
          <property name="timeoutUnit" value="${pnfsmanager.service.pinmanager-timeout.unit}"/>
          <property name="retryOnNoRouteToCell" value="true"/>
        </bean>
     </property>
      <property name="callbackDestination" value="${pnfsmanager.callback}"/>
      <property name="callbackTimeout" value="${pnfsmanager.callback-timeout}"/>
      <property name="callbackTimeoutUnit" value="${pnfsmanager.callback-timeout.unit}"/>
      <property name="poolTimeout" value="${pnfsmanager.service.pool-timeout}"/>
      <property name="poolTimeoutUnit" value="${pnfsmanager.service.pool-timeout.unit}"/>
    </bean>

    <bean id="PoolInfoCache" init-method="initialize">
      <property name="poolMonitor" ref="PoolMonitorStub"/>
      <property name="size" value="${pnfsmanager.replication.expected-number-of-pools}"/>
      <property name="lifetime" ref="${pnfsmanager.replication.pool-info-lifetime}"/>
      <property name="lifetimeUnit" ref="${pnfsmanager.replication.pool-info-lifetime.unit}"/>
    </bean>

    <bean id="PoolManagerPoolInfoCache" init-method="initialize">
      <property name="poolManager" ref="PoolManagerStub"/>
      <property name="size" value="${pnfsmanager.replication.expected-number-of-pools}"/>
      <property name="lifetime" ref="${pnfsmanager.replication.pool-info-lifetime}"/>
      <property name="lifetimeUnit" ref="${pnfsmanager.replication.pool-info-lifetime.unit}"/>
    </bean>

    <bean id="PoolStatusCache" init-method="initialize">
      <property name="size" value="${pnfsmanager.replication.expected-number-of-pools}"/>
      <property name="lifetime" ref="${pnfsmanager.replication.scan-period}"/>
      <property name="lifetimeUnit" ref="${pnfsmanager.replication.scan-period.unit}"/>
    </bean>

    <bean id="ReplicationHub" class="org.dcache.namespace.replication.ReplicationHub">
      <property name="access" ref="NamespaceAccess"/>
      <property name="registry" ref="ActivityRegistry"/>
      <property name="migrationTaskExecutor" ref="MigrationTaskExecutor"/>
      <property name="verifyPoolExecutor" ref="VerifyPoolExecutor"/>
      <property name="processPnfsIdExecutor" ref="ProcessPnfsIdExecutor"/>
      <property name="processPoolExecutor" ref="ProcessPoolExecutor"/>
      <property name="makeCopiesExecutor" ref="MakeCopiesExecutor"/>
      <property name="removeExtrasExecutor" ref="RemoveExtrasExecutor"/>
      <property name="cellStubFactory" ref="CellStubFactory"/>
      <property name="poolInfoCache" ref="PoolInfoCache"/>
      <property name="poolManagerPoolInfoCache" ref="PoolManagerPoolInfoCache"/>
      <property name="poolStatusCache" ref="PoolStatusCache"/>
      <property name="poolStatusGracePeriod" value="${pnfsmanager.replication.grace-period-on-pool-status-change}"/>
      <property name="poolStatusGracePeriodUnit" value="${pnfsmanager.replication.grace-period-on-pool-status-change.unit}"/>
    </bean>

    <bean id="ResilienceWatchdog" class="org.dcache.namespace.replication.ResilienceWatchdog">
      <description>This is initialized/started by the message guard.</description>
      <property name="hub" ref="ReplicationHub"/>
      <property name="handler" ref="ReplicationMessageHandler"/>
      <property name="timeout" value="${pnfsmanager.replication.watchdog-period}"/>
      <property name="timeoutUnit" value="${pnfsmanager.replication.watchdog-period.unit}"/>
    </bean>

    <bean id="MessageGuard" class="org.dcache.namespace.replication.MessageGuard" init-method="initialize">
      <property name="watchdog" ref="ResilienceWatchdog"/>
      <property name="enableWatchdogOnBoot" value="${pnfsmanager.replication.use-watchdog}"/>
    </bean>

    <bean id="ReplicationMessageHandler" class="org.dcache.namespace.replication.ReplicationMessageHandler"
          init-method="initialize">
      <property name="guard" ref="MessageGuard"/>
      <property name="hub" ref="ReplicationHub"/>
    </bean>

    <bean id="ReplicaManagerAdminCLI" class="org.dcache.namespace.replication.admin.ReplicationAdmin">
      <property name="access" ref="NamespaceAccess"/>
      <property name="hub" ref="ReplicationHub"/>
      <property name="watchdog" ref="ResilienceWatchdog"/>
    </bean>
  </beans>
</beans>
